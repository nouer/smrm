{
  "name": "smrm",
  "version": "1.0.0",
  "description": "シンプルカルテ管理 (Simple Medical Record Management)",
  "main": "local_app/script.js",
  "scripts": {
    "test": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"],
    "coverageDirectory": "coverage",
    "projects": [
      {
        "displayName": "unit",
        "testEnvironment": "jsdom",
        "testMatch": ["**/smrm.calc.test.js"],
        "testPathIgnorePatterns": ["local_app/e2e.test.js"]
      },
      {
        "displayName": "e2e",
        "testEnvironment": "node",
        "testMatch": ["**/e2e.test.js"]
      }
    ]
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "puppeteer": "^21.5.0"
  }
}
